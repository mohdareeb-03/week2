#include<stdio.h>
#include<conio.h>
void main(){
    int i,j,n;
    n=5;
    for(i=n;i>=1;i--)
    {
        for(j=n;j>i;j--)
        {printf("%d\t",j);}
        for(j=1;j<=2*i-1;j++)
        {printf("%d\t",i);}
        for(j=i;j<n;j++)
        {printf("%d\t",j+1);}
    printf("\n");
    }
       for(i=1;i<n;i++)
    {
        for(j=n;j>i;j--)
        {printf("%d\t",j);}
        for(j=1;j<=2*i-1;j++)
        {printf("%d\t",i+1);}
        for(j=i;j<n;j++)
        {printf("%d\t",j+1);}
        printf("\n");
    }
}
